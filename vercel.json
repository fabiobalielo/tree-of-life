{
  "buildCommand": "pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "functions": {
    "src/app/api/chat/*": {
      "maxDuration": 60,
      "runtime": "edge"
    },
    "src/app/api/knowledge-base/*": {
      "maxDuration": 60,
      "runtime": "nodejs18.x"
    }
  }
}
